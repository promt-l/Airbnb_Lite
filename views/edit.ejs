<% layout("/layouts/boilerPlate") %>
 
    <form action="/listings/<%= detail._id %>?_method=PATCH" method="POST">
        <div class="col-8 offset-2"><br>
            <h2>Edit what you want</h2>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Title</label>
                    <input type="text" name="listing[title]" placeholder="title" class="form-control edit" value="<%= detail.title %>"> 
                </div>
        
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Description</label>
                    <textarea placeholder="Write the description" name="listing[description]" class="form-control"><%= detail.description%></textarea> 
                </div>
        
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="exampleInputEmail1" class="form-label">Price</label>
                    <input type="number" name="listing[price]" placeholder="Enter price" class="form-control" value="<%= detail.price %>"> 
                </div>
        
                <div class="mb-3 col-md-8">
                    <label for="exampleInputEmail1" class="form-label">Country</label>
                    <input type="text" name="listing[country]" placeholder="Enter country" class="form-control" value="<%= detail.country %>"> 
                </div>
            </div>
        
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Location</label>
                    <input type="text" name="listing[location]" placeholder="Set Location" class="form-control" value="<%= detail.location %>"> 
                </div>
        
               
                <center><button class="btn btn-primary">Save</button></center><br>
            
        </div>

    </form>
 